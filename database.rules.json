{
  "rules": {
    "courses": {
      ".read": true,
      "$courseId": {
        ".read": true,
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || data.child('createdBy').val() === auth.uid)",
        ".delete": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || data.child('createdBy').val() === auth.uid)",
        ".validate": "newData.hasChildren(['title', 'description', 'accessType', 'createdBy'])",
        "purchases": {
          "$userId": {
            ".read": "$userId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
            ".write": "auth != null && $userId === auth.uid"
          }
        },
        "content": {
          ".read": "data.parent().child('accessType').val() === 'free' || auth != null",
          ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() === 'admin' || data.parent().child('createdBy').val() === auth.uid)"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        "subscription": {
          ".read": "$uid === auth.uid",
          ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
          ".validate": "newData.hasChildren(['status', 'planId'])"
        },
        "purchases": {
          ".read": "$uid === auth.uid",
          ".write": "auth != null && $uid === auth.uid",
          "$courseId": {
            ".validate": "newData.hasChildren(['purchasedAt', 'amount', 'paymentMethod'])"
          }
        },
        "role": {
          ".validate": "newData.val() === 'user' || newData.val() === 'admin'"
        }
      }
    },
    "transactions": {
      "$transactionId": {
        ".read": "auth != null && data.child('userId').val() === auth.uid",
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['userId', 'courseId', 'amount', 'status'])"
      }
    },
    "subscriptions": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".validate": "newData.hasChildren(['status', 'planId', 'startDate'])"
      }
    },
    "checkoutSessions": {
      "$sessionId": {
        ".read": "auth != null && data.child('userId').val() === auth.uid",
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['userId', 'status', 'createdAt'])"
      }
    }
  }
}